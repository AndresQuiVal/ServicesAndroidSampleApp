
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:text="This app runs a service in background"
        android:layout_width="match_parent"
        android:layout_height="25.0dp"
        android:id="@+id/textView1"
        android:layout_marginBottom="10.5dp"
        android:layout_marginTop="10.5dp"
        android:layout_marginLeft="12.0dp" />
    <Button
        android:text="Start Service"
        android:layout_width="match_parent"
        android:layout_height="54.0dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/btnStartService"
        android:layout_marginRight="14.0dp"
        android:layout_marginBottom="5.5dp"
        android:layout_marginTop="7.0dp"
        android:layout_marginLeft="15.0dp"
        android:background="#ff1b56f2" />
    <Button
        android:text="Stop service"
        android:layout_width="match_parent"
        android:layout_height="54.0dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/btnStopService"
        android:layout_marginRight="14.0dp"
        android:layout_marginBottom="5.5dp"
        android:layout_marginTop="7.0dp"
        android:layout_marginLeft="15.0dp"
        android:background="#ff00fac4" />
    <TextView
        android:id="@+id/outputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Service paused, click on Start Service to initialize"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"/>
</LinearLayout>